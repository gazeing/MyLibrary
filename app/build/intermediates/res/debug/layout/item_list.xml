<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/item_layout_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/itemImage"
        android:layout_width="150sp"
    	android:layout_height="150sp"
    	android:layout_alignParentTop="true"  
        android:layout_centerHorizontal="true"  
        android:layout_margin="5dp"  
        android:scaleType="centerCrop"
        android:src="@color/dim_foreground_disabled_material_light"
        android:contentDescription="Item Image"
        />
    <ImageView
        android:id="@+id/text_backgrond"
        android:layout_width="140sp"
        android:layout_height="50sp"
        android:layout_alignBottom="@id/itemImage"
        android:layout_alignLeft="@id/itemImage"
        android:layout_marginBottom="5dp"
        android:src="@color/material_blue_grey_800"
        android:contentDescription="Text background"
        />

    <TextView 
        android:id="@+id/itemTitle" 
        android:layout_width="90sp"
        android:layout_height="wrap_content"  
        android:layout_alignBottom="@id/text_backgrond"
        android:layout_centerHorizontal="true"  
        android:layout_marginBottom="5dp"  
        android:layout_marginTop="5dp"  
        android:textColor="@color/link_text_material_light"
        android:text="some info"
        android:textAlignment="center"
        android:textSize="12sp"
        android:maxLines="3"
        />

    

</RelativeLayout>
</FrameLayout><!-- From: file:/steven/work/projects/MyLibrary/app/src/main/res/layout/item_list.xml -->